{
  "name": "automation-dsu-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for automating Daily Standup Updates (DSU) at 9AM and 5PM WIB",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:watch": "node --watch src/index.js",
    "test": "node src/test-connection.js",
    "test:connection": "node src/test-connection.js",
    "test:manual": "node src/test-manual.js",
    "test:scheduler": "node src/test-scheduler.js",
    "test:templates": "node src/test-templates.js",
    "lint": "echo \"Linting not configured yet\"",
    "validate": "npm run test:connection",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop dsu-discord-bot",
    "pm2:restart": "pm2 restart dsu-discord-bot",
    "pm2:logs": "pm2 logs dsu-discord-bot",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "discord",
    "bot",
    "automation",
    "standup",
    "scheduler",
    "cron"
  ],
  "author": "opisboy29",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
