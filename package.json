{
  "name": "automation-dsu-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for automating Daily Standup Updates (DSU) at 9AM and 5PM WIB",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js --watch src --watch config",
    "dev:watch": "node --watch src/index.js",
    "dev:debug": "DEBUG_MODE=true LOG_LEVEL=debug nodemon src/index.js",
    "dev:dry": "DRY_RUN=true npm run dev",
    "prod": "NODE_ENV=production node src/index.js",
    "prod:pm2": "npm run pm2:start",
    "test": "npm run test:config && npm run test:connection",
    "test:all": "npm run test:config && npm run test:connection && npm run test:validation && npm run test:scheduler && npm run test:templates && npm run test:commands",
    "test:config": "node src/test-config-validation.js",
    "test:connection": "node src/test-connection.js",
    "test:manual": "node src/test-manual.js",
    "test:scheduler": "node src/test-scheduler.js",
    "test:templates": "node src/test-templates.js",
    "test:commands": "node src/test-manual-commands.js",
    "test:validation": "node src/test-channel-validation.js",
    "test:config-validation": "node src/test-config-validation.js",
    "validate": "npm run test:config",
    "validate:all": "npm run test:all",
    "setup": "cp .env.example .env && echo 'Please edit .env file with your configuration'",
    "setup:check": "npm run validate && echo 'Configuration validation passed!'",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "clean": "rm -rf logs/*.log node_modules/.cache",
    "install:fresh": "rm -rf node_modules package-lock.json && npm install",
    "health": "curl -f http://localhost:${PORT:-3000}/health || echo 'Health check failed'",
    "status": "curl -f http://localhost:${PORT:-3000}/status || echo 'Status check failed'",
    "lint": "echo \"Linting not configured yet\"",
    "format": "echo \"Code formatting not configured yet\"",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop dsu-discord-bot",
    "pm2:restart": "pm2 restart dsu-discord-bot",
    "pm2:reload": "pm2 reload dsu-discord-bot",
    "pm2:delete": "pm2 delete dsu-discord-bot",
    "pm2:logs": "pm2 logs dsu-discord-bot",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status dsu-discord-bot",
    "deploy": "npm run validate:all && npm run pm2:start",
    "deploy:check": "npm run health && npm run status",
    "backup:config": "cp .env .env.backup.$(date +%Y%m%d_%H%M%S)",
    "restore:config": "ls -la .env.backup.* | tail -1 | awk '{print $9}' | xargs -I {} cp {} .env"
  },
  "keywords": [
    "discord",
    "bot",
    "automation",
    "standup",
    "scheduler",
    "cron"
  ],
  "author": "opisboy29",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
